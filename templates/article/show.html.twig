{% extends "base.html.twig" %}
{% block body %}
    <div class="col-md-6 col-lg-4 col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{article.nom}}</h5>
                        <p class="card-text">{{article.prix}}</p>
                        <p class="card-text">{{article.description}}</p>
                        <p class="card-text">{{article.categorie.nom}}</p>

                        {% for articleImage in article.articleImages %}
                            <img class="img-fluid" src="{{ vich_uploader_asset(articleImage.image, 'imageFichier') }}" alt="{{ article.nom }}" />
                        {% endfor %}
                        <p class="card-text">{{article.dateAjout | date("j/m/Y")}}</p>
                    </div>
                </div>
    </div>
{% endblock %}