{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(registrationForm) }}

                    {{ form_errors(registrationForm) }}
                <div class="row">
                    <div class="col-md-6">
                    {{ form_row(registrationForm.nom,{
                        label:"Nom"
                    }) }}
                    </div>
                    <div class="col-md-6">
                    {{ form_row(registrationForm.prenom,{
                        label:"Prénom"
                    }) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(registrationForm.dateNaissance,{
                            label:"Date de naissance"
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(registrationForm.genre) }}
                    </div>
                </div>
                    {{ form_row(registrationForm.nationalite,
                        {label:"Nationalité"}
                    ) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(registrationForm.compte.email) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(registrationForm.compte.plainPassword, {
                                label: 'Mot de passe'
                            }) }}
                        </div>
                    </div>           
                    {{ form_row(registrationForm.compte.agreeTerms) }}

                    <button type="submit" class="btn btn-primary mt-3">S'inscrire</button>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}